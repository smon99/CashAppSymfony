{% extends 'base.html.twig' %}

{% block body %}
    <style>
        /* Reusing the same styles from the user settings page */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .container {
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 30px;
            width: 90%;
            max-width: 500px;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

        .button {
            background-color: #5e51d8;
            color: white;
            border: none;
            padding: 8px 16px;
            text-align: center;
            text-decoration: none;
            font-size: 16px;
            cursor: pointer;
            border-radius: 4px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            margin-left: 10px; /* Added margin for spacing */
        }

        .button:hover {
            background-color: #7c6bd7;
        }

        .form-group {
            display: flex;
            align-items: center;
            width: 100%;
        }

        .input-field {
            flex-grow: 1; /* Allows input to fill the space */
            padding: 8px;
            margin-bottom: 0; /* Adjusted margin */
            box-sizing: border-box;
            border: 2px solid #ccc;
            border-radius: 4px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .user-info {
            display: flex;
            justify-content: space-between;
            width: 100%;
            margin-bottom: 20px;
        }

        .user-info > div {
            display: flex;
            align-items: center;
        }

        .logout-button {
            padding: 8px 16px;
            margin-left: 10px;
        }
    </style>

    <div class="container">
        <div class="user-info">
            <div>
                Angemeldet als: {{ app.user.username }}
            </div>
            <div>
                <a href="{{ path('app_logout') }}" class="button logout-button">Abmelden</a>
                <a href="{{ path('app_home') }}" class="button logout-button">Features</a>
            </div>
        </div>

        <h1>E-Mail Ã¤ndern</h1>

        <form method="post" action="{{ path('app_user_email') }}" class="form-group">
            <input type="text" name="new_email" class="input-field" placeholder="Neue E-Mail" required>
            <button type="submit" class="button">aktualisieren</button>
        </form>
    </div>

{% endblock %}