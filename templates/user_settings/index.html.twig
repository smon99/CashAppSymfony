{% extends 'base.html.twig' %}

{% block body %}
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .container {
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 30px;
            width: 90%;
            max-width: 500px;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

        .button {
            background-color: #5e51d8;
            color: white;
            border: none;
            padding: 8px 0;
            text-align: center;
            text-decoration: none;
            display: block;
            width: 100%;
            font-size: 16px;
            cursor: pointer;
            border-radius: 4px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .button:hover {
            background-color: #7c6bd7;
        }

        .user-info {
            display: flex;
            justify-content: space-between;
            width: 100%;
            margin-bottom: 20px;
        }

        .user-info > div {
            display: flex;
            align-items: center;
        }

        .logout-button {
            padding: 8px 16px;
            margin-left: 10px;
        }
    </style>

    <div class="container">
        <div class="user-info">
            <div>
                Angemeldet als: {{ app.user.username }}
            </div>
            <div>
                <a href="{{ path('app_logout') }}" class="button logout-button">Abmelden</a>
                <a href="{{ path('app_home') }}" class="button logout-button">Features</a>
            </div>
        </div>

        <h1>Profil bearbeiten</h1>

        <a href="{{ path('app_user_settings') }}" style="text-decoration: none; width: 100%;">
            <button class="button"
                    style="width: 100%; background-color: #5e51d8; border: none; border-radius: 4px; color: #fff; padding: 12px 0; margin-bottom: 10px; cursor: pointer;">
                Benutzernamen ändern
            </button>
        </a>

        <a href="{{ path('app_user_settings') }}" style="text-decoration: none; width: 100%;">
            <button class="button"
                    style="width: 100%; background-color: #5e51d8; border: none; border-radius: 4px; color: #fff; padding: 12px 0; margin-bottom: 10px; cursor: pointer;">
                E-Mail ändern
            </button>
        </a>

        <a href="{{ path('app_user_settings') }}" style="text-decoration: none; width: 100%;">
            <button class="button"
                    style="width: 100%; background-color: #5e51d8; border: none; border-radius: 4px; color: #fff; padding: 12px 0; margin-bottom: 10px; cursor: pointer;">
                Passwort ändern
            </button>
        </a>

    </div>

{% endblock %}