{% extends 'base.html.twig' %}

{% block title %}Paypal Controller{% endblock %}

{% block body %}
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .container {
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 30px;
            width: 90%;
            max-width: 500px;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

        h1 {
            color: #333;
            text-align: center;
            width: 100%;
        }

        .button {
            background-color: #5e51d8;
            color: white;
            border: none;
            padding: 8px 0;
            text-align: center;
            text-decoration: none;
            display: block;
            width: 100%;
            font-size: 16px;
            cursor: pointer;
            border-radius: 4px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .button:hover {
            background-color: #7c6bd7;
        }

        .user-info {
            display: flex;
            align-items: center;
            justify-content: space-between;
            width: 100%;
            margin-bottom: 5px;
        }

        .user-info div,
        .user-info form,
        .user-info a {
            margin: 0;
            display: flex;
            align-items: center;
        }

        .user-info button {
            padding: 8px 16px;
            margin-right: 0;
        }

        .button-inline {
            display: inline-block;
            width: auto;
            margin: 0;
        }

        .payment-section {
            text-align: center;
            width: 100%;
            margin-top: 20px;
        }

        .payment-buttons {
            display: flex;
            justify-content: center;
            gap: 15px;
            width: 100%;
        }
    </style>

    <div class="container">
        <div class="user-info">
            <div>
                Angemeldet als: {{ app.user.username }}
            </div>
            <div>
                <a href="{{ path('app_logout') }}" class="button-inline"
                   style="text-decoration: none; margin-left: 10px;">
                    <button class="button">Abmelden</button>
                </a>
                <a href="{{ path('app_home') }}" class="button-inline"
                   style="text-decoration: none; margin-left: 10px;">
                    <button class="button">Features</button>
                </a>
            </div>
        </div>

        <h1>{{ controller_name }}</h1>

        <div class="payment-section" style="margin-bottom: 15px;">
            Charge your balance via PayPal:
        </div>

        <div class="payment-buttons">
            <form action="{{ path('app_paypal') }}" method="post">
                <input type="hidden" name="paypalValue" value="10">
                <button type="submit" class="button">
                    10€
                </button>
            </form>

            <form action="{{ path('app_paypal') }}" method="post">
                <input type="hidden" name="paypalValue" value="25">
                <button type="submit" class="button">
                    25€
                </button>
            </form>

            <form action="{{ path('app_paypal') }}" method="post">
                <input type="hidden" name="paypalValue" value="50">
                <button type="submit" class="button">
                    50€
                </button>
            </form>
        </div>
    </div>
{% endblock %}