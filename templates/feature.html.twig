{% extends 'base.html.twig' %}

{% block body %}
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <title>CashApp</title>
        <style>
            body {
                font-family: 'Arial', sans-serif;
                background-color: #f4f4f4;
                margin: 0;
                padding: 0;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                height: 100vh;
            }

            .btn-account:hover {
                background-color: #7c6bd7;
            }

            .btn-transaction:hover {
                background-color: #6f63d6;
            }

            .btn-history:hover {
                background-color: #685bd8;
            }

            .btn-logout:hover {
                background-color: #1480ff;
            }
        </style>
    </head>
    <body>
    <div style="background-color: #fff; border-radius: 15px; box-shadow: 0 4px 15px rgba(0,0,0,0.1); padding: 30px; width: 90%; max-width: 500px; display: flex; flex-direction: column; align-items: center;">

        <span style="font-weight: bold; font-size: 1.5em; margin-bottom: 20px;">Angemeldet als: {{ activeUser }}</span>

        <form method="post" action="/login" style="margin-bottom: 20px;">
            <button type="submit" name="logout" class="btn-logout"
                    style="background-color: #007BFF; border: none; border-radius: 4px; color: #fff; padding: 10px 20px; cursor: pointer; font-weight: bold;">
                Abmelden
            </button>
        </form>

        <a href="http://0.0.0.0:8000/deposit" style="text-decoration: none; width: 100%;">
            <button class="btn-account"
                    style="width: 100%; background-color: #5e51d8; border: none; border-radius: 4px; color: #fff; padding: 12px 0; margin-bottom: 10px; cursor: pointer;">
                Guthaben einzahlen
            </button>
        </a>

        <a href="http://0.0.0.0:8000/transaction" style="text-decoration: none; width: 100%;">
            <button class="btn-transaction"
                    style="width: 100%; background-color: #5e51d8; border: none; border-radius: 4px; color: #fff; padding: 12px 0; margin-bottom: 10px; cursor: pointer;">
                Guthaben versenden
            </button>
        </a>

        <a href="http://0.0.0.0:8000/history" style="text-decoration: none; width: 100%;">
            <button class="btn-history"
                    style="width: 100%; background-color: #5e51d8; border: none; border-radius: 4px; color: #fff; padding: 12px 0; cursor: pointer;">
                Transaktionen einsehen
            </button>
        </a>
    </div>
    </body>
    </html>
{% endblock %}
